{
  "name": "circumspect",
  "description": "Set of functions to make your TypeScript/JavaScript code safer",
  "keywords": [
    "assert-never",
    "invariant",
    "not-null",
    "warning"
  ],
  "homepage": "https://github.com/kyarik/circumspect#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kyarik/circumspect.git"
  },
  "bugs": {
    "url": "https://github.com/kyarik/circumspect/issues"
  },
  "author": "Yaroslav Kukytsyak",
  "version": "0.1.0",
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/circumspect.esm.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build"
  },
  "peerDependencies": {},
  "devDependencies": {
    "husky": "^4.2.5",
    "tsdx": "^0.13.3",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
